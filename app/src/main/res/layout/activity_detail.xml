<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_activity_outer1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.myday.DetailActivity">

    <LinearLayout
        android:id="@+id/detail_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_activity_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="test"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"
            android:paddingLeft="5dp"
            android:paddingRight="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center">

                <ImageView
                    android:id="@+id/detail_activity_image"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/star178_32" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <RelativeLayout
                    android:id="@+id/rlayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/detail_activity_static_image1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/tick_32" />

                    <TextView
                        android:id="@+id/detail_activity_discount_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/detail_activity_static_image1"
                        android:paddingLeft="10dp"
                        android:text="Discount"
                        android:textColor="@android:color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/detail_activity_discount"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/detail_activity_discount_title"
                        android:text="test"
                        android:textColor="@android:color/black" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/detail_activity_static_image2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/location_32" />

                    <TextView
                        android:id="@+id/detail_activity_location_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/detail_activity_static_image2"
                        android:paddingLeft="10dp"
                        android:text="Location"
                        android:textColor="@android:color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/detail_activity_location"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/detail_activity_location_title"
                        android:text="test"
                        android:textColor="@android:color/black" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlayout3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/detail_activity_static_image3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/info_32" />

                    <TextView
                        android:id="@+id/detail_activity_city_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/detail_activity_static_image3"
                        android:paddingLeft="10dp"
                        android:text="City "
                        android:textColor="@android:color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/detail_activity_city"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/detail_activity_city_title"
                        android:text="test"
                        android:textColor="@android:color/black" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/detail_activity_static_image4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/coins_32" />

                    <TextView
                        android:id="@+id/detail_activity_price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/detail_activity_static_image4"
                        android:paddingLeft="10dp"
                        android:text="Price "
                        android:textColor="@android:color/black"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/detail_activity_price"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/detail_activity_price_title"
                        android:text="test"
                        android:textColor="@android:color/black" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/rlayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/detail_activity_static_image5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/favorite_32" />

                    <TextView
                        android:id="@+id/detail_activity_rating_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/detail_activity_static_image5"
                        android:paddingLeft="10dp"
                        android:text="Rating "
                        android:textColor="@android:color/black"
                        android:textSize="15dp" />

                    <RatingBar
                        android:id="@+id/detail_activity_rating"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/detail_activity_rating_title"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="4.0"
                        android:stepSize="0.5" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/detail_ll1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <TextView
        android:id="@+id/detail_activity_desc_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider1"
        android:layout_marginTop="10dp"
        android:text="Description :"
        android:textColor="@android:color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/detail_activity_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_activity_desc_title"
        android:layout_marginTop="10dp"
        android:text="test description .c,/as sfdnskjfbdsj jdbfkjdfbksdj kdsfkdkjsdkjasdhcsdcdssadasdksdhfkdsa" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/detail_ll_button1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" />

    <LinearLayout
        android:id="@+id/detail_ll_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/detail_ll_button2">

        <LinearLayout
            android:id="@+id/detail_activity_ll_button_favorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/btn_default"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/favorite_button_star32" />

            <TextView
                android:id="@+id/detail_activity_favorite"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Favorite It!"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_activity_ll_button_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/btn_default"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/share_32" />

            <TextView
                android:id="@+id/detail_activity_share"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Share"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_ll_button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/detail_activity_ll_button_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/btn_default"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/back_arrow_32" />

            <TextView
                android:id="@+id/detail_activity_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="Back"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/detail_activity_ll_button_SMS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:drawable/btn_default"
            android:clickable="true"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/sms_32" />

            <TextView
                android:id="@+id/detail_activity_sms"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="SMS"
                android:textSize="15dp" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
